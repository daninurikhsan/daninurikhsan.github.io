---
import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout title="Dani Ikhsan">
	<!-- Hero -->
	<section class="flex flex-col items-center gap-6 sm:flex-row sm:items-center mb-10">
		
		<img src="/avatar.png" alt="Dani Ikhsan" class="w-40 h-40 rounded-full mb-4 scale-x-[-1] transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5"/>
		
		<div class="text-center sm:text-left">
			<h1 class="text-3xl font-bold">Dani Ikhsan</h1>
	
			<p class="mt-2 text-gray-600">
				Backend Engineer, sometime DevOps, building better software systems.
			</p>
		</div>
	</section>
	<!-- Hero -->

	<!-- Projects -->
	<section class="mb-12">
		<div class="flex items-center justify-between mb-4">
			<h2 class="text-lg font-semibold">Projects</h2>
		</div>

		<div class="space-y-6">
			<!-- TIL -->
			<article
				class="rounded-xl border border-gray-200 bg-white p-6
						transition-all duration-200
						hover:border-gray-300 hover:bg-gray-50"
				>
				<h3 class="text-lg font-semibold tracking-tight">
					TIL (Today I Learned)
				</h3>

				<p class="mt-2 text-sm text-gray-600">
					Small daily learnings, notes, and more...
				</p>

				<div class="mt-4 text-sm">
					<a
					href="/til"
					class="font-medium text-gray-900 "
					>
					Read →
					</a>
				</div>
			</article>
			<!-- TIL -->

			<!-- Ulas Kode -->
			<article
				class="rounded-xl border border-gray-200 bg-white p-6
						transition-all duration-200
						hover:border-gray-300 hover:bg-gray-50"
				>
				<h3 class="text-lg font-semibold tracking-tight">
					Ulas Kode
				</h3>

				<p class="mt-2 text-sm text-gray-600">
					Programming Tutorials in Bahasa Indonesia
				</p>

				<div class="mt-4 text-sm">
					<a
					href="#"
					class="font-medium text-gray-900 "
					>
					Coming Soon!
					</a>
				</div>
			</article>
			<!-- Ulas Kode -->

		</div>
	</section>
	<!-- Projects -->

	<!-- About -->
	<section class="mb-12">
		<h2 class="text-lg font-semibold mb-2">About Me</h2>
		<p class="text-gray-700">
			I specialize in Backend Engineering with a growing interest in product and project management. I use writing as a way to clarify thinking and share practical knowledge.
		</p>
	</section>
	<!-- About -->

	<!-- Footer -->
	<footer class="mt-14 text-center text-sm text-muted">
		<div class="flex justify-center gap-6 mb-2">
			<a href=""></a>
		</div>
		<p>© {new Date().getFullYear()} Dani Ikhsan. All rights reserved.</p>
	</footer>
	<!-- Footer -->


</BaseLayout>
